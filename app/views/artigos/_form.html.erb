<div class="container">
  <%= form_with model: @artigo, local: true do |form| %>
   
    <% if @artigo.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@artigo.errors.count, "erros") %> proibiram
          essa postagem de ser salva:
        </h2>
        <ul>
          <% @artigo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
        <%= form.label :titulo, 'Titulo:', :class => '' %>
        <%= form.text_field :titulo, :class => 'form-control' %>  
        <%= form.label :texto, 'Texto:', :class => ''  %>      
        <%= form.text_area :texto, :class => 'form-control', :rows => 10 %>     
    </div>
    <div class="form-group row align-items-center">
      <div class="col-sm-2">      
        <%= form.submit "Criar Postagem", :class => 'form-control btn btn-primary'%>
      </div>
    </div> 
  <% end %>
</div>